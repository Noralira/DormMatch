<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/background">


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="0dp"
        android:paddingVertical="60dp">

        <ImageButton
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-5dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/_icon__chevron_down___1_" />

        <TextView
            android:id="@+id/perf"
            android:layout_width="95dp"
            android:layout_height="39dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp"
            android:text="Perfil"
            android:textColor="@color/blue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="141dp"
            android:layout_height="140dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="-20dp"
            android:src="@drawable/component_11" />


    </LinearLayout>





    <TextView
        android:id="@+id/nome"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="330dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/component_9" />

    <TextView
        android:id="@+id/tele"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="400dp"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/_icon__mobile_" />

    <TextView
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="470dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="53dp"
        android:src="@drawable/_icon__email_" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="535dp"
        android:text="Password"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="52dp"
        android:src="@drawable/_icon__eye_" />


</RelativeLayout>