<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout

        android:id="@+id/Ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="173dp"
            android:layout_height="39dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:text="Bem vindo!"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_marginLeft="295dp"
            android:bottomRightRadius="20dp"
            android:bottomLeftRadius="20dp"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp"
            android:layout_marginTop="-46dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/Ll1"
       >

        <LinearLayout
            android:id="@+id/Ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:hint="Pesquisar..."
                    android:importantForAutofill="no"
                    android:background="@drawable/bg_white_rounded"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/blue"
                    android:drawableLeft="@drawable/ic_baseline_search"
                    android:onClick="pesquisa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoria"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/baseline_house_24"
                    android:backgroundTint="@color/blue"
                    android:text="Casa"/>
                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/baseline_apartment_24"
                    android:layout_marginTop="-69dp"
                    android:layout_marginLeft="95dp"

                    android:text="Apart."/>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginTop="-69dp"
                    android:layout_marginLeft="190dp"
                    android:drawableTop="@drawable/baseline_bedroom_parent_24"
                    android:text="quarto."/>
                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:textSize="12dp"
                    android:layout_marginTop="-69dp"
                    android:layout_marginLeft="288dp"
                    android:drawableTop="@drawable/baseline_other_houses_24"
                    android:text="outro"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quartos"
                    android:padding="20dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>